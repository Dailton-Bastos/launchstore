{% extends "../_layout/default.njk" %}

{% import "../_partials/card.njk" as card %}

{% block content %}

  {% call card.render('Entrar', 'login form container') %}
    <form action="/users/login" method="post">

      <div class="fields">
        {% include "./_fields.njk" %}
      </div>

      <button type="submit" class="button">Entrar</button>

      <div class="footer">
        <ul>
          <li>
            <a href="/users/register">Registre-se</a>
          </li>
          <li>
            <a href="/users/forgot-password">Esqueci a senha</a>
          </li>
        </ul>
      </div>
    </form>
  {% endcall%}

{% endblock %}
