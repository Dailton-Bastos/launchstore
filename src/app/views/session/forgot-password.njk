{% extends "../_layout/default.njk" %}

{% import "../_partials/card.njk" as card %}

{% block content %}

  {% call card.render('Esqueceu a senha?', 'password form container') %}
    <form action="/users/forgot-password" method="post">

      <div class="fields">
      <label for="email">Email</label>
        <div class="input">
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Digite o email cadastrado"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          >
        </div>
      </div>

      <button type="submit" class="button">Recuperar senha</button>
    </form>
  {% endcall %}

{% endblock %}
