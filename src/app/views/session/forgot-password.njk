{% extends "../_layout/default.njk" %}

{% block content %}

  <section class="password container form">
    <form action="/users/forgot-password" method="post">

      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div>

      <div class="fields">

      <label for="email">Email</label>
        <div class="input">
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Digite o email cadastrado"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          >
        </div>
      </div>

      <button type="submit" class="button">Recuperar senha</button>
    </form>
  </section>
{% endblock %}
